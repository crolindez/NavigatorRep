<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp" >
    
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
		android:orientation="vertical" 
		android:baselineAligned="false" >

        <LinearLayout	
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
			android:orientation="horizontal" 
			android:baselineAligned="false" >
			
		   <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="2"
		        android:layout_margin="3dp"
		        android:background="@drawable/stock_bg"
		        android:orientation="vertical" 
		        android:baselineAligned="false" >

		        <TextView
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginBottom="5dp"
		            android:layout_marginTop="10dp"
		            android:text="@string/stock"
		            android:textSize="18sp"
		            android:textStyle="bold|italic" />
		
		        <TextView
		            android:id="@+id/general_info_stock"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_gravity="center_horizontal"
		            android:layout_marginBottom="10dp"
		            android:layout_marginTop="5dp"
		            android:text="333"
		            android:textSize="18sp" />
		
		   </LinearLayout>
				
		   <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="3dp"
		        android:layout_weight="2"
		        android:background="@drawable/cost_bg"
		        android:orientation="horizontal" >

	   		   <LinearLayout
	   		       android:layout_width="0dp"
	   		       android:layout_height="match_parent"
	   		       android:layout_weight="1"
	   		       android:orientation="vertical" >
		
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal|center"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="10dp"
				        android:text="@string/cost"
				        android:textSize="18sp"
				        android:textStyle="bold|italic" />

		    		<TextView
		    		    android:id="@+id/general_info_cost"
		    		    android:layout_width="wrap_content"
		    		    android:layout_height="wrap_content"
		    		    android:layout_gravity="center_horizontal"
		    		    android:layout_marginBottom="10dp"
		    		    android:layout_marginTop="5dp"
		    		    android:text="32.4"
		    		    android:textSize="18sp" />

				</LinearLayout>
		        
			   <LinearLayout
			       android:layout_width="0dp"
			       android:layout_height="match_parent"
			       android:layout_weight="1"
			       android:orientation="vertical" >

				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"
				        android:layout_marginBottom="5dp"
				        android:layout_marginTop="10dp"
				        android:text="@string/price"
				        android:textSize="18sp"
				        android:textStyle="bold|italic" />
			       		
			        <TextView
			            android:id="@+id/general_info_price"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_gravity="center_horizontal"
			            android:layout_marginTop="5dp"
			            android:text="150"
			            android:textSize="18sp" />
		
				</LinearLayout>	        
			</LinearLayout>	
		
       </LinearLayout>
	   
	   <LinearLayout        		    
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" 
			android:orientation="horizontal" 
			android:baselineAligned="false" >
		   
		   <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_margin="3dp"
		        android:layout_weight="1"
		        android:background="@drawable/consume_bg"
		        android:orientation="vertical" >
		
		   		<RelativeLayout
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content" >	
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
				        android:text="@string/sale"
				        android:textStyle="bold|italic" 
				        android:textSize="16sp" />
		
				    <TextView
				        android:id="@+id/general_info_sales"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_alignParentRight="true"
				        android:layout_centerVertical="true"
				        android:layout_marginRight="50dp"
				        android:gravity="right"
				        android:text="48"
				        android:textSize="16sp" />
		
				</RelativeLayout>
		
		   		<RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >	
			        <TextView          
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
				        android:text="@string/transfer"
				        android:textStyle="bold|italic"  
				        android:textSize="16sp" />
				    <TextView
			            android:id="@+id/general_info_transfer"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="23" 
				        android:textSize="16sp" />
				</RelativeLayout>	 	    
		   		
				<RelativeLayout
				    android:layout_width="match_parent"
			        android:layout_height="wrap_content" >	
		
				    <TextView
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
				        android:text="@string/consumed"
				        android:textSize="16sp"
				        android:textStyle="bold|italic" />
		
				    <TextView
				        android:id="@+id/general_info_used_in_production"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="23"
				        android:textSize="16sp" />
				</RelativeLayout>
		
				<RelativeLayout 
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >	
			       <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
			            android:text="@string/future_consume"
			            android:textStyle="bold|italic"  
				        android:textSize="16sp"  />
			        <TextView
			            android:id="@+id/general_info_used_in_planned_produccions"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="23" 
				        android:textSize="16sp" />
			    </RelativeLayout>			        
			</LinearLayout>	
		  	
		    <LinearLayout
		        android:layout_width="0dp"
		        android:layout_height="match_parent"
		        android:layout_margin="3dp"
		        android:layout_weight="1"
		        android:background="@drawable/outcome_bg"
		        android:orientation="vertical" >
		
				<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >	
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
			            android:text="@string/purchase"
			            android:textStyle="bold|italic"  
				        android:textSize="16sp"  />
			        <TextView
			            android:id="@+id/general_info_purchase"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="500" 
				        android:textSize="16sp" />
			    </RelativeLayout>			        
				<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >		        
				    <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_alignParentLeft="true"
			            android:layout_centerVertical="true"
			            android:layout_marginBottom="10dp"
			            android:layout_marginLeft="50dp"
			            android:layout_marginTop="10dp"
				        android:text="@string/in_production"
			            android:textStyle="bold|italic"  
				        android:textSize="16sp"  />
			        <TextView
			            android:id="@+id/general_info_in_production"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="150" 
				        android:textSize="16sp" />
			    </RelativeLayout>			        
				<RelativeLayout
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content" >			        
				    <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
		            android:layout_alignParentLeft="true"
		            android:layout_centerVertical="true"
		            android:layout_marginBottom="10dp"
		            android:layout_marginLeft="50dp"
		            android:layout_marginTop="10dp"
			            android:text="@string/in_planned_production"
			            android:textStyle="bold|italic"  
				        android:textSize="16sp"  />
			        <TextView
			            android:id="@+id/general_info_in_planned_produccions"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
			            android:layout_alignParentRight="true"
			            android:layout_centerVertical="true"
			            android:layout_marginRight="50dp"
				        android:text="150" 
				        android:textSize="16sp" />
			    </RelativeLayout>			        
			</LinearLayout>	
		</LinearLayout>	      
	</LinearLayout>
</ScrollView>