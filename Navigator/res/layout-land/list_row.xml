<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    android:padding="2dip" >
 
    <!-- arrow to list of use -->
    <ImageButton
        android:contentDescription="Included in"
        android:id="@+id/arrowLeft_list"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_height="48dp"
        android:layout_width="48dp"   
        android:paddingRight="1dip" 
        android:paddingLeft="1dip"
        android:rotation="180"     
    	android:src="@drawable/arrow" /> 
    
    <!-- Reference Number -->
    <TextView
        android:id="@+id/reference_list"
        android:layout_height="48dp"
        android:layout_width="90dp"
        android:layout_toRightOf="@id/arrowLeft_list"
        android:layout_centerVertical="true"
        android:paddingLeft="1dip"
        android:paddingRight="1dip"
        android:textColor="#040404"
        android:text=""
        android:typeface="sans"    
        android:textSize="15sp"
        android:textStyle="bold" />
     
    <!-- Quantity in BOOM -->
    <TextView
        android:id="@+id/quantity_list"
        android:layout_height="24dp"
        android:layout_width="80dp"
        android:layout_toRightOf="@id/arrowLeft_list"
        android:layout_alignParentBottom="true"
        android:paddingLeft="1dip"
        android:paddingRight="1dip" 
        android:textColor="#040404"
        android:text=""
        android:typeface="sans"    
        android:textSize="15sp"
        android:textStyle="normal" />
        
    <!-- Stock Description -->
    <TextView
        android:id="@+id/stock_list"
        android:layout_height="24dp"
        android:layout_width="120dp"
        android:layout_toLeftOf="@id/arrowRight_list"
        android:layout_alignParentTop="true"
        android:textColor="#0404A4"
        android:text=""
        android:paddingLeft="1dip"
        android:paddingRight="1dip" 
        android:gravity="right"
        android:typeface="sans"    
        android:textSize="15sp" 
        android:textStyle="bold" />    

    
    <!-- Cost Description -->
    <TextView
        android:id="@+id/cost_list"
        android:layout_height="24dp"
        android:layout_width="120dp"
        android:layout_toLeftOf="@id/arrowRight_list"
        android:layout_alignParentBottom="true"
        android:textColor="#040404"
        android:text=""
        android:paddingLeft="1dip"
        android:paddingRight="1dip" 
        android:gravity="right"
        android:typeface="sans"    
        android:textSize="15sp" 
        android:textStyle="bold" />    

    <!-- arrow to explode BOOM -->
    <ImageButton
        android:id="@+id/arrowRight_list"
        android:contentDescription=""
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_height="48dp"
        android:layout_width="48dp"   
        android:paddingRight="1dip" 
        android:paddingLeft="1dip"   
    	android:src="@drawable/arrow" />
    
	<!-- Reference Description -->    
    <TextView
        android:id="@+id/description_list"
        android:layout_height="48dp"
        android:layout_width="wrap_content"
        android:layout_toLeftOf="@id/cost_list"
        android:layout_toRightOf="@id/reference_list" 
        android:layout_centerVertical="true"
        android:textColor="#040404"
        android:text=""
        android:paddingRight="1dip" 
        android:typeface="sans"    
        android:textSize="15sp"
        android:textStyle="italic" />
        

</RelativeLayout>
